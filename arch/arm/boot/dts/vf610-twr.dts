/dts-v1/;
#include "vf610.dtsi"

/ {
	model = "VF610 Tower Board";
	compatible = "fsl,vf610-twr", "fsl,vf610";

	chosen {
		bootargs = "console=ttyLP1,115200";
	};

	memory {
		reg = <0x80000000 0x8000000>;
	};

	clocks {
		audio_ext {
			compatible = "fixed-clock";
			clock-frequency = <24576000>;
		};

		enet_ext {
			compatible = "fixed-clock";
			clock-frequency = <50000000>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led@1 {
			label = "vf610-twr:blue:d1";
			gpios = <&gpio1 22 GPIO_ACTIVE_HIGH>; /* gpio[22] PTB0 */
			linux,default-trigger = "heartbeat";
			default-state = "off";
		};

		led@3 {
			label = "vf610-twr:yel:d3";
			gpios = <&gpio1 23 GPIO_ACTIVE_HIGH>; /* gpio[23] PTB1 */
			linux,default-trigger = "none";
			default-state = "off";
		};

		led@4 {
			label = "vf610-twr:yel_grn:d4";
			gpios = <&gpio1 24 GPIO_ACTIVE_HIGH>; /* gpio[24] PTB2 */
			linux,default-trigger = "none";
			default-state = "off";
		};

		led@6 {
			label = "vf610-twr:or_red:d6";
			gpios = <&gpio1 25 GPIO_ACTIVE_HIGH>; /* gpio[25] PTB3 */
			linux,default-trigger = "none";
			default-state = "off";
		};
	};
};

&fec0 {
	phy-mode = "rmii";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_fec0_1>;
	status = "okay";
};

&fec1 {
	phy-mode = "rmii";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_fec1_1>;
	status = "okay";
};

&i2c0 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c0_1>;
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart1_1>;
	status = "okay";
};
